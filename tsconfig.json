{
  "compilerOptions": {
    "baseUrl": ".",
    "removeComments": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "esnext",
      "dom"
    ],
    "moduleResolution": "node",
    "module": "ESNext",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "target": "ES6",
    "allowJs": true,
    "outDir": "lib/src",
    "rootDir": "src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/stories/*"
  ]
}
